/dts-v1/;
#include <nordic/nrf52832_qfaa.dtsi>
#include "beluga2_nrf52832-pinctrl.dtsi"
#include <zephyr/dt-bindings/input/input-event-codes.h>

/ {
	model = "Beluga2";
	compatible = "wiselab,beluga2";

	chosen {
		zephyr,console = &uart0;
		zephyr,shell-uart = &uart0;
		zephyr,uart-mcumgr = &uart0;
		zephyr,bt-mon-uart = &uart0;
		zephyr,bt-c2h-uart = &uart0;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,code-partition = &slot0_partition;
	};

	leds {
		compatible = "gpio-leds";
		led0 {
			label = "led0";
			gpios = <&gpio0 11 0>;
		};

		led1: led1 {
			gpios = <&gpio0 12 0>;
			label = "led1";
		};

		led2: led2 {
			gpios = <&gpio0 14 0>;
			label = "led2";
		};

		led3: led3 {
			gpios = <&gpio0 15 0>;
			label = "led3";
		};
	};

	nrf_radio_fem: nrf21540-fem {
		compatible = "nordic,nrf21540-fem";
		tx-en-gpios = <&gpio0 22 0>;
		rx-en-gpios = <&gpio0 24 0>;
		pdn-gpios = <&gpio0 20 0>;
		ant-sel-gpios = <&gpio0 23 0>;
		mode-gpios = <&gpio0 25 0>;
		spi-if = <&{/soc/spi@40004000/nrf21540-fem-spi@0/}>; // TODO
		supply-voltage-mv = <3300>;
	};

	zephyr,user {
		J1.27-gpios = <&gpio0 6 0>;
		J1.26-gpios = <&gpio0 7 0>;
		J1.25-gpios = <&gpio0 8 0>;
		J1.5-gpios = <&gpio0 9 0>;
		J1.4-gpios = <&gpio0 10 0>;
		J1.19-gpios = <&gpio0 13 0>;
	};
};

&gpiote {
	status = "okay";
};

&gpio0 {
	status = "okay";
};

&uart0 {
	compatible = "nordic,nrf-uarte";
	status = "okay";
	current-speed = <115200>;
	pinctrl-0 = <&uart0_default>;
	pinctrl-names = "default";
};

&i2c0 {
	compatible = "nordic,nrftwi";
	status = "okay";
	pinctrl-0 = <&i2c0_default>;
	pinctrl-names = "default";
	lis2dh12@19 {
		compatible = "st,lis2dh12";
		reg = <0x19>;
	};
};

main_spi: &spi1 {
	status = "okay";
	cs-gpios = <&gpio0 19 0>, <&gpio0 31 0>;
	pinctrl-0 = <&spi1_default>;
	pinctrl-names = "default";
	nrf21540-fem-spi@0 {
		compatible = "nordic,nrf21540-fem-spi";
		reg = <0x0>;
		spi-max-frequency = <DT_FREQ_M(8)>;
	};

	dw1000@1 {
		compatible = "decawave,dw1000";
		reg = <0x1>;
		int-gpios = <&gpio0 26 0>;
		reset-gpios = <&gpio0 30 0>;
		spi-max-frequency = <DT_FREQ_M(20)>;
	};
};

&radio {
	fem = <&nrf_radio_fem>;
};

&flash0 {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		boot_partition: partition@0 {
			label = "mcuboot";
			reg = <0x0 0xc000>;
		};
		slot0_partition: partition@c000 {
			label = "image-0";
			reg = <0xc000 0x32000>;
		};
		slot1_partition: partition@3e000 {
			label = "image-1";
			reg = <0x3e000 0x32000>;
		};
		scratch_partition: partition@70000 {
			label = "image-scratch";
			reg = <0x70000 0xa000>;
		};
		storage_partition: partition@7a000 {
			label = "storage";
			reg = <0x7a000 0x6000>;
		};
	};
};
