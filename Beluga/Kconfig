mainmenu "Beluga application"

menu "Beluga Configurations"

rsource "./config/kconfig/Kconfig.beluga_threads"

rsource "./config/kconfig/Kconfig.uwb"

rsource "./config/kconfig/Kconfig.neighbors"

rsource "./config/kconfig/Kconfig.watchdog"

config BELUGA_BOARD_HW_ID
    int "Hardware ID of the Board"
    default 0

choice "BELUGA_LED_INDICATOR_CHOICE"
    prompt "LEDs are used to indicate states for"
    default BELUGA_LEDS

config BELUGA_BLE_LEDS
    bool "BLE states"

config BELUGA_LEDS
    bool "Beluga states"

endchoice

config BELUGA_RANGE_EXTENSION
    bool "Enable range extension for Beluga"
    default n

config BELUGA_USE_ACCEL
    bool "Use the accelerometer to wakeup from deep sleep [EXPERIMENTAL]"
    select SENSOR
    select EXPERIMENTAL
    default n

config UWB_LOGIC_CLK
    bool "UWB ranging exchange IDs"
    default n

config BELUGA_GATT
    bool "Beluga GATT service"
    default n

rsource "./config/kconfig/Kconfig.beluga_debug"

config WDT_MAX_WINDOW
    int "Maximum window of the watchdog timer"
    default 2000

rsource "./config/kconfig/Kconfig.comms"

endmenu # "Beluga Configurations"

source "Kconfig.zephyr"
